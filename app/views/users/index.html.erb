<% provide(:title, "All Users") %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <p>ユーザー名検索</p>
  <%= form_with(scope: :search, url: users_path, method: :get, local: true) do |f| %>
    <%= f.search_field :name, placeholder: "キーワードを入力...", class: "form-search" %><%= f.submit '検索', class: "btn btn-sm btn-primary" %>
  <% end %>
  <%= will_paginate %>
    <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <tr>
          <th>名前</th>
        </tr>
      </thead>
      
      <% @users.each do |user| %>
        <tr>
          <td>
            <% if current_user.admin? %>
              <%= link_to user.name, user %>
            <% else %>
              <%= user.name %>
            <% end %>  
            <% if current_user.admin? && !current_user?(user) %>
              <%= link_to "基本情報編集", edit_basic_info_user_path(user) %>
              <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してよろしいですか？" } %>
            <% end %>      
          </td>
        </tr>
      <% end %>
    </table>
  <%= will_paginate %>
</div>